 @{
    ViewData["Title"] = "Vip Papelera";
}


    

    <!-- Start Content -->
    <div class="container py-5">
        <div class="row">

            <div class="col-lg-3">
                <h1 class="h2 pb-4">Filtros</h1>
                <ul class="list-unstyled templatemo-accordion">
                    <li class="pb-3">
                        <a class="collapsed d-flex justify-content-between h3 text-decoration-none" href="#">
                            Gender
                            <i class="fa fa-fw fa-chevron-circle-down mt-1"></i>
                        </a>
                        <ul class="collapse show list-unstyled pl-3">
                            <li><a class="text-decoration-none" href="#">Men</a></li>
                            <li><a class="text-decoration-none" href="#">Women</a></li>
                        </ul>
                    </li>
                </ul>
            </div>

            <div class="col-lg-9">
                <div class="row">
                    <div class="col-md-6 pb-4">
                        <div class="d-flex">
                            <select class="form-control">
                                <option>Featured</option>
                                <option>A to Z</option>
                                <option>Item</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
 @{
                  foreach(Producto productos in @ViewBag.Productos){
                    <div class="col-12 col-md-4 mb-4">
                      <div class="card h-100 product-wap rounded-0">
                    <div class="card rounded-0">
                    <div class="center">
                      <img class="product-image" src="@productos.foto" alt="@productos.foto">
                      </div>
                       <div class="card-img-overlay rounded-0 product-overlay d-flex align-items-center justify-content-center">
                         <ul class="list-unstyled">
                            <li><a href='@Url.Action("detalleProductos","Home", new{idProducto = productos.idProducto, nombre = productos.nombre, descripcion = productos.descripcion , idCategoria = productos.idCategoria})'  class="btn btn-success text-white mt-2"><i class="far fa-eye"></i></a></li>
                             <li><a class="btn btn-success text-white mt-2" href='@Url.Action("AgregarProducto","Home", new{idProducto = productos.idProducto, nombre = productos.nombre, descripcion = productos.descripcion, foto= productos.foto, marca= productos.marca, precio = productos.precio, stock=productos.stock, destacado =productos.destacado ,cantidad = productos.cantidad})' ><i class="fas fa-cart-plus"></i></a></li>
                        </ul>
                     </div>
                      </div>
                      <div class="card-body">
                            <h3 class="h3 text-decoration-none text-dark">@productos.nombre</h3>
                            <ul class="list-unstyled d-flex justify-content-between">
                            <li class="text-muted text-right">$@productos.precio</li>
                            </ul>
                            <p class="card-text">
                                @productos.descripcion
                            </p>
 
                        

                        </div>
                    </div>
                    </div>
                    
                  }   
        }               
</div>
                

    


