<!DOCTYPE html>
<html lang="en">

<head>
    <title>Vip Papelera</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="apple-touch-icon" href="~/img/apple-icon.png">
    <link rel="shortcut icon" type="~/image/x-icon" href="~/img/favicon.ico">

    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/templatemo.css">
    <link rel="stylesheet" href="~/css/custom.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;200;300;400;500;700;900&display=swap">
    <link rel="stylesheet" href="~/css/fontawesome.min.css">

</head>

<body>
@{
        
        
        List<subCategorias> ListasubCategorias= new List<subCategorias>();
        List<Categorias> ListaCategorias = new List<Categorias>();

        
        
        ListaCategorias = BD.ListarCategorias();
        ViewBag.Categorias = ListaCategorias;
        
        ListasubCategorias = BD.ListarsubCategorias();
        ViewBag.subCategorias = ListasubCategorias;
}


    <div class="row h-25" >


        <header class="w-98">
            <nav class="navbar navbar-expand-lg navbar-light shadow">
                <div class="container-fluid">
                 <a class="navbar-brand text-success logo h2 align-self-center" asp-area="" asp-controller="Home" asp-action="Index">
                Vip Papelera
                 </a>
             <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#templatemo_main_nav" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
                    <div class="align-self-center collapse navbar-collapse flex-fill  d-lg-flex justify-content-lg-between">
                        <ul class="navbar-nav mr-auto ul">
                            <li class="li"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index" style="color: #59ab6e">Home</a></li>
                            <li class="li"><a class="nav-link " asp-area="" asp-controller="Home" asp-action="Productos" style="color: #59ab6e">Productos</a></li>


                            @{
                                foreach(Categorias categoria in @ViewBag.Categorias){
                                    <li class="li">
                                        <a class="nav-link" style="color: #59ab6e" href='@Url.Action("productosCategorias","Home", new{idCategoria = categoria.idCategoria})'>@categoria.nombre</a>
                                        <ul class="ul">

                                                
                                                    @foreach (subCategorias subcategoria in @ViewBag.subCategorias)
                                                    {
                                                        if(subcategoria.idCategoria == categoria.idCategoria){
                                                        <li class="li"><a href='@Url.Action("productosSubcategorias","Home", new{idSubCategoria = subcategoria.idSubcategoria})'>@subcategoria.nombre</a></li>
                                                    }
                                                    }

                                                
                                        </ul>

                                    </li>
                                }   
                            }

                                
                         <li class="nav-item li">
                            <a class="nav-link " asp-area="" asp-controller="Home" asp-action="FAQ" style="color: #59ab6e">FAQ</a>
                        </li>
                         <li class="nav-item li">
                           <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contacto" style="color: #59ab6e">Contacto</a></li>
                        </li>
                            

                        </ul>
                    </div>
                    </div>
                      <a class="nav-icon position-relative text-decoration-none" asp-area="" asp-controller="Home" asp-action="carrito" >
                        <i class="fa fa-shopping-cart text-dark mr-1"  style= "font-size:36px;color:white"></i>
                    </a>
                                
                </div>
            </nav>
        </header>

    </div>








    


 <div class="vw-98">
            <main role="main">
                @RenderBody()
            </main>
        </div>
<div class="vw-98 d-flex justify-content-end" style="margin-top: 2vh">
 <a target="_blank" href="https://wa.me/5491156591284"><img src="~/img/wpp.png" class= "wpp"/></a>
 </div>
